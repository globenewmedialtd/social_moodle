{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
    'clearfix',
  ]
%}

{{ attach_library('social_moodle_iteration/iteration-list') }}

<div class="social-moodle-iteration">

  <div class="social-moodle-iteration-headline">
    <h3>{{ label }}</h3>
  </div>

  <div class="social-moodle-iteration-content">
    <div class="social-moodle-iteration-content-line">{{ content.field_iteration_date }}</div>
    <div class="social-moodle-iteration-content-line">{{ content.field_iteration_date_end }}</div>
  </div>

  <div class="social-moodle-iteration-buttons">
    {% if show_default_enrollment == true %}
      {{ enrollment_form }}
    {% else %}
      {{ iteration_form }}
    {% endif %}
    
  </div>

</div>
